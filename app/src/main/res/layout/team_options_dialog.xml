<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"

        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/team_dialog_base"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="20dp"

        >


        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/team_dialog_title"
            android:padding="10dp"
            android:text="Team bearbeiten"
            android:textColor="@android:color/white"
            android:textSize="18sp"

            />


        <TextView

            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:lineSpacingExtra="6dp"
            android:text="Wähle einen neuen Teamnamen:"
            android:textColor="@color/liladunke"
            android:textSize="18sp"

            />

        <EditText

            android:id="@+id/team_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Hier eingeben..."
            android:maxLines="1"
            android:textColor="@color/liladunke"
            android:textColorHint="@color/liladunke" />

        <TextView


            android:id="@+id/teswow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:lineSpacingExtra="6dp"
            android:clickable="true"
            android:text="Wähle eine Teamfarbe:"
            android:textColor="@color/liladunke"
            android:textSize="18sp" />

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView

                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:layout_margin="10dp"
                app:srcCompat="@android:color/holo_red_dark"
                android:id="@+id/color_picker_red_id" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:layout_margin="10dp"
                app:srcCompat="@color/schwarz"
                android:id="@+id/color_picker_black_id" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:layout_margin="10dp"
                app:srcCompat="@android:color/holo_purple"
                android:id="@+id/color_picker_purple_id" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:layout_margin="10dp"
                app:srcCompat="@color/gelb"
                android:id="@+id/color_picker_yellow_id" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:layout_margin="10dp"
                app:srcCompat="@color/grün"
                android:id="@+id/color_picker_green_id" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:layout_margin="10dp"
                app:srcCompat="@color/blau"
                android:id="@+id/color_picker_blue_id" />


        </LinearLayout>


        <Button

            android:id="@+id/positive_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:background="@drawable/team_dialog_positive"
            android:text="OK"
            android:textColor="@android:color/white"

            />


    </LinearLayout>


    <Button

        android:id="@+id/close_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/closedialog_drawable"
        android:text="×"
        android:textColor="@color/teamcion_lila"
        android:textSize="24sp"

        />


</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"

        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/team_dialog_base"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="20dp"

        >


        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/team_dialog_title"
            android:padding="10dp"
            android:text="Team bearbeiten"
            android:textColor="@android:color/white"
            android:textSize="18sp"

            />


        <TextView

            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:lineSpacingExtra="6dp"
            android:text="Wähle einen neuen Teamnamen:"
            android:textColor="@color/liladunke"
            android:textSize="18sp"

            />

        <EditText

            android:id="@+id/team_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Hier eingeben..."
            android:maxLines="1"
            android:textColor="@color/liladunke"
            android:textColorHint="@color/liladunke" />

        <TextView


            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:lineSpacingExtra="6dp"
            android:text="Wähle eine Teamfarbe:"
            android:textColor="@color/liladunke"
            android:textSize="18sp" />

        <include
            layout="@layout/try_color_picker"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


        <Button

            android:id="@+id/positive_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:background="@drawable/team_dialog_positive"
            android:text="OK"
            android:textColor="@android:color/white"

            />


    </LinearLayout>


    <Button

        android:id="@+id/close_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/closedialog_drawable"
        android:text="×"
        android:textColor="@color/teamcion_lila"
        android:textSize="24sp"

        />


</RelativeLayout>
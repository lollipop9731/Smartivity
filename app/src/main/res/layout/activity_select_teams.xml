<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lorenz.activitytogo.SelectTeams"
    android:background="@drawable/gradient">


    <SeekBar
        android:id="@+id/seekbar_teams"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="70dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:max="6"
        android:progress="1"
        android:splitTrack="false"
        android:progressDrawable="@drawable/seekbar_style"
        android:thumb="@drawable/thumb_seekbar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/team_1"
        android:layout_width="73dp"
        android:layout_height="70dp"
        android:layout_marginBottom="200dp"
        android:layout_marginStart="48dp"
        app:layout_constraintBottom_toTopOf="@+id/seekbar_teams"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_team_svg" />

    <ImageView
        android:id="@+id/team_2"
        android:layout_width="73dp"
        android:layout_height="70dp"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="180dp"
        app:layout_constraintBottom_toTopOf="@+id/team_1"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_team_svg" />

    <ImageView
        android:id="@+id/team_3"
        android:layout_width="73dp"
        android:layout_height="70dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="148dp"
        app:layout_constraintStart_toEndOf="@+id/team_1"
        app:layout_constraintTop_toBottomOf="@+id/team_2"
        app:srcCompat="@drawable/ic_team_svg" />

    <ImageView
        android:id="@+id/team_4"
        android:layout_width="73dp"
        android:layout_height="70dp"
        android:layout_marginBottom="48dp"
        android:layout_marginEnd="84dp"
        app:layout_constraintBottom_toTopOf="@+id/team_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_team_svg" />

    <ImageView
        android:id="@+id/team_5"
        android:layout_width="73dp"
        android:layout_height="70dp"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="84dp"
        app:layout_constraintBottom_toTopOf="@+id/team_3"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_team_svg" />

    <ImageView
        android:id="@+id/team_6"
        android:layout_width="73dp"
        android:layout_height="70dp"
        android:layout_marginStart="76dp"
        android:layout_marginTop="152dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_team_svg" />

    <TextView
        android:id="@+id/selectTeams_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:text="@string/SelectTeams"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>

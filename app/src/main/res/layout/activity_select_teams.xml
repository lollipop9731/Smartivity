<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context="com.example.lorenz.activitytogo.SelectTeamsActivity"
    tools:layout_editor_absoluteY="25dp">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="411dp"
        android:layout_height="56dp"
        android:background="@null"

        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />


    <SeekBar
        android:id="@+id/seekbar_teams"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/weiter_tv"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:max="6"
        android:progress="1"
        android:progressDrawable="@drawable/seekbar_style"
        android:splitTrack="false"
        android:thumb="@drawable/thumb_seekbar"
        app:layout_constraintBottom_toTopOf="@+id/weiter_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/team_1"
        android:layout_width="73dp"
        android:layout_height="70dp"
        android:layout_above="@+id/seekbar_teams"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="32dp"
        android:layout_toEndOf="@+id/imageView2"
        android:layout_toRightOf="@+id/imageView2"
        app:layout_constraintEnd_toStartOf="@+id/team_3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/team_5"
        app:srcCompat="@drawable/ic_team_svg" />

    <ImageView
        android:id="@+id/team_2"
        android:layout_width="73dp"
        android:layout_height="70dp"
        android:layout_above="@+id/team_1"
        android:layout_marginBottom="44dp"
        android:layout_toEndOf="@+id/team_2_tv"
        android:layout_toRightOf="@+id/team_2_tv"
        app:layout_constraintBottom_toTopOf="@+id/seekbar_teams"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_team_svg" />

    <ImageView
        android:id="@+id/team_3"
        android:layout_width="71dp"
        android:layout_height="70dp"

        android:layout_marginStart="32dp"
        android:layout_marginTop="52dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/team_1"
        app:layout_constraintTop_toBottomOf="@+id/team_5"
        app:srcCompat="@drawable/ic_team_svg" />

    <ImageView
        android:id="@+id/team_4"
        android:layout_width="72dp"
        android:layout_height="70dp"
        android:layout_alignEnd="@+id/weiter_tv"
        android:layout_alignRight="@+id/weiter_tv"
        android:layout_below="@+id/team_5"
        android:layout_marginStart="24dp"
        android:layout_marginTop="44dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/team_6"
        app:layout_constraintTop_toBottomOf="@+id/selectTeams_tv"
        app:srcCompat="@drawable/ic_team_svg" />

    <ImageView
        android:id="@+id/team_5"
        android:layout_width="73dp"
        android:layout_height="70dp"
        android:layout_below="@+id/team_2_tv"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="112dp"
        android:layout_toEndOf="@+id/team_1"
        android:layout_toRightOf="@+id/team_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.512"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/selectTeams_tv"
        app:srcCompat="@drawable/ic_team_svg" />

    <ImageView
        android:id="@+id/team_6"
        android:layout_width="73dp"
        android:layout_height="70dp"
        android:layout_alignLeft="@+id/team_4"
        android:layout_alignStart="@+id/team_4"
        android:layout_below="@+id/team_1_tv"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="28dp"
        app:layout_constraintEnd_toStartOf="@+id/team_4"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/selectTeams_tv"
        app:srcCompat="@drawable/ic_team_svg" />

    <TextView
        android:id="@+id/selectTeams_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="56dp"
        android:text="@string/SelectTeams"
        android:textAlignment="center"
        android:textColor="@color/weiss"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/team_1_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/team_1"
        android:layout_alignStart="@+id/team_1"
        android:layout_alignTop="@+id/team_1"
        android:layout_marginEnd="8dp"
        android:text="Team 1"
        android:textColor="@color/teamcion_lila"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/team_1"
        app:layout_constraintStart_toStartOf="@+id/team_1"
        app:layout_constraintTop_toBottomOf="@+id/team_1" />

    <TextView
        android:id="@+id/team_2_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="Team 2"
        android:textColor="@color/teamcion_lila"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/team_2"
        app:layout_constraintStart_toStartOf="@+id/team_2"
        app:layout_constraintTop_toBottomOf="@+id/team_2" />

    <TextView
        android:id="@+id/team_3_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="Team 3"
        android:textColor="@color/teamcion_lila"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/team_3"
        app:layout_constraintStart_toStartOf="@+id/team_3"
        app:layout_constraintTop_toBottomOf="@+id/team_3" />

    <TextView
        android:id="@+id/team_4_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Team 4"
        android:textColor="@color/teamcion_lila"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/team_4"
        app:layout_constraintStart_toStartOf="@+id/team_4"
        app:layout_constraintTop_toBottomOf="@+id/team_4" />

    <TextView
        android:id="@+id/team_5_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Team 5"
        android:textColor="@color/teamcion_lila"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/team_5"
        app:layout_constraintStart_toStartOf="@+id/team_5"
        app:layout_constraintTop_toBottomOf="@+id/team_5" />

    <TextView
        android:id="@+id/team_6_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:text="Team 6"
        android:textColor="@color/teamcion_lila"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/team_6"
        app:layout_constraintStart_toStartOf="@+id/team_6"
        app:layout_constraintTop_toBottomOf="@+id/team_6" />

    <TextView
        android:id="@+id/weiter_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/selectTeams_tv"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/selectTeams_tv"
        android:layout_marginBottom="13dp"
        android:layout_marginEnd="8dp"
        android:clickable="true"
        android:onClick="weiterclick"
        android:text="Weiter"
        android:textColor="@color/weiss"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imageView2" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_arrow_forward_black_24dp" />

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="344dp"
        android:layout_height="wrap_content"
        android:background="@null"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="0dp" />


</android.support.constraint.ConstraintLayout>
